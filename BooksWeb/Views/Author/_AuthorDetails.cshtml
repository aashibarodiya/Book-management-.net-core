@model Author;

<h2> @Model.Name</h2>

<div class='row'>
    <div class='col'>
        <img src="@Model.PhotoUrl" class='cover-photo' />
    </div>
    <div class='col'>
        <h3>Social</h3>
        <div class="social-info">
            <label>Email</label>
            <p>
                <a href="mailto:@Model.Social.Email">@Model.Social.Email</a>                
            </p>
        </div>
        <div class="social-info">
            <label>Web</label>
            <p>
                <a href="@Model.Social.WebSite">Visit Official Website</a>                
            </p>
        </div>

    </div>
</div>
<div>
    <h2>Biography</h2>
    <p>
        @Model.Biography
    </p>
</div>